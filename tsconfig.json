{
  "compilerOptions": {
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "baseUrl": ".",
    "noEmit": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
  },
  "include": ["src/**/*"],   
  "ts-node": {
      "swc": true
  }
}
